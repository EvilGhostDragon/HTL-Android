<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ControlFragmentMan"
    android:paddingBottom="50dp"
    android:paddingTop="50dp">


    <Button
        android:id="@+id/button_ctr_man_stop"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@null" />

    <Button android:id="@+id/button_ctr_man_up"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="UP"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/button_ctr_man_stop"/>

    <Button android:id="@+id/button_ctr_man_down"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="DOWN"
            android:layout_centerInParent="true"
            android:layout_below="@id/button_ctr_man_up"
    />
    <Button android:id="@+id/button_ctr_man_left"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="LEFT"
            android:layout_centerHorizontal="true"
            android:layout_toLeftOf="@+id/button_ctr_man_stop"/>

    <Button android:id="@+id/button_ctr_man_right"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="RIGHT"
            android:layout_toRightOf="@+id/button_ctr_man_stop"
    />


    <SeekBar
        android:id="@+id/seekBar"
        style="@android:style/Widget.Material.SeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:max="10"
        android:progress="3" />

    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/dpad_mask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_margin="50dp"
            android:scaleType="fitCenter"
            android:src="@drawable/dpad_mask"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/dpad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_margin="50dp"
            android:scaleType="fitCenter"
            android:src="@drawable/dpad_normal" />

        <ImageView
            android:id="@+id/dpad_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_margin="50dp"
            android:scaleType="fitCenter"
            android:visibility="invisible"
            android:src="@drawable/dpad_center" />

        <ImageView
            android:id="@+id/dpad_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_margin="50dp"
            android:scaleType="fitCenter"
            android:visibility="invisible"
            android:src="@drawable/dpad_up" />

    </RelativeLayout>

</RelativeLayout>